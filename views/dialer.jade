extends view

append head
  script(type='text/javascript' src='/bower/libphonenumber/dist/libphonenumber.js')
  script(type='text/javascript' src='/bower/dtmf/dist/dtmf.min.js')
  script(type='text/javascript' src='/js/elements/ps-dialer-input.js')
  script(type='text/javascript' src='/js/elements/ps-dialer-keypad.js')

  script(type='text/javascript' src='//static.twilio.com/libs/twiliojs/1.2/twilio.min.js')
  script(type='text/javascript' src='/twilio/caps.js')
  script(type='text/javascript' src='/js/telephony.js')
  link(rel='stylesheet', href='/style/dialer.css')

block content
  #top
    #call-info
      h1 Incoming
      h2
    ps-dialer-input
  #midsection
    #call-status
      h3 Incoming..
    ps-dialer-keypad
  #callbar.buttonbar
    button#mute.show-incall.small(aria-label='Mute', data-icon="mute", data-l10n-id="mute")
    button#call.show-nocall(aria-label='Call', data-icon="call", data-l10n-id="ignore")
    button#reject.show-inbound(aria-label='Reject', data-icon="call-hang-up", data-l10n-id="ignore")
    button#hangup.show-incall(aria-label='Hang up', data-icon="call-hang-up", data-l10n-id="ignore")
    button#accept.show-inbound(aria-label='Accept', data-icon="call", data-l10n-id="ignore")
    button#show-dialpad.show-incall.small(aria-label='Show dialpad', data-icon="dialpad", data-l10n-id="show-dialpad")

block tailend
  script(type='text/javascript' src='/js/dialer.js')
